<?xml version="1.0" encoding="UTF-8"?>
<listing
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- **************************************************** -->
    <!-- Additional Columns for Grid                          -->
    <!-- **************************************************** -->
    <columns name="customer_columns">

        <column name="prxgtDwnlCustomerRef"
                component="Praxigento_Downline/js/grid/customer/index/column/link/customer_mlm_id">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">MLM ID</label>
            </settings>
        </column>

        <column name="prxgtDwnlParentRef"
                component="Praxigento_Downline/js/grid/customer/index/column/link/parent_mlm_id">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Parent MLM ID</label>
            </settings>
        </column>

        <column name="prxgtDwnlCustomerDepth"
                component="Praxigento_Core/js/grid/column/integer">
            <settings>
                <dataType>number</dataType>
                <filter>textRange</filter>
                <label translate="true">Depth</label>
            </settings>
        </column>

    </columns>

</listing>
