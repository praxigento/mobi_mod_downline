<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- **************************************************** -->
    <!-- Additional Columns for Grid                          -->
    <!-- **************************************************** -->
    <columns name="sales_order_columns">

        <column name="prxgtDwnlMlmId"
                component="Praxigento_Downline/js/grid/sales/order/column/link/customer_mlm_id">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">MLM ID</label>
            </settings>
        </column>

        <column name="prxgtDwnlMlmIdParent"
                component="Praxigento_Downline/js/grid/sales/order/column/link/parent_mlm_id">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Parent ID</label>
            </settings>
        </column>

        <column name="prxgtDwnlParentName">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Parent Name</label>
            </settings>
        </column>

        <column name="prxgtDwnlStoreName">
            <settings>
                <dataType>select</dataType>
                <filter>select</filter>
                <options class="Praxigento\Core\Model\Config\Source\Stores"/>
                <label translate="true">Store</label>
            </settings>
        </column>


        <column name="prxgtDwnlCountry">
            <settings>
                <dataType>text</dataType>
                <filter>text</filter>
                <label translate="true">Reg. Country</label>
            </settings>
        </column>

    </columns>
</listing>
