{
  "dBEAR": {
    "package": {
      "Praxigento": {
        "alias": "prxgt",
        "comment": "Root namespace for Praxigento modules",
        "package": {
          "Downline": {
            "alias": "dwnl",
            "comment": "Top level package for Praxigento_Downline module",
            "entity": {
              "Customer": {
                "alias": "customer",
                "comment": "Additional customer attributes related to downline tree.",
                "attribute": {
                  "CustomerRef": {
                    "alias": "customer_ref",
                    "comment": "Reference to the customer.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "ParentId": {
                    "alias": "parent_ref",
                    "comment": "Reference to the customer's parent.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "Depth": {
                    "alias": "depth",
                    "comment": "Depth of the node in the tree.",
                    "nullable": false,
                    "default": 0,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "Path": {
                    "alias": "path",
                    "comment": "Path to the node - /1/2/3/.../",
                    "nullable": false,
                    "type": {"text": {"length": 255}}
                  },
                  "MlmId": {
                    "alias": "mlm_id",
                    "comment": "MLM ID (human readable reference).",
                    "nullable": true,
                    "type": {"text": {"length": 255}}
                  },
                  "ReferralCode": {
                    "alias": "referral_code",
                    "comment": "Code for referral links/coupons to build downline.",
                    "nullable": true,
                    "type": {"text": {"length": 255}}
                  },
                  "CountryCode": {
                    "alias": "country_code",
                    "comment": "Code for country of the registration.",
                    "nullable": false,
                    "type": {"text": {"length": 2}}
                  }
                },
                "index": {
                  "PK": {"type": "primary", "aliases": ["customer_ref"]},
                  "uniqueHumanReference": {"type": "unique", "aliases": ["mlm_id"]},
                  "uniqueReferralCode": {"type": "unique", "aliases": ["referral_code"]}
                },
                "relation": {
                  "toMageCustomer": {
                    "own": {"aliases": ["customer_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "customer_entity"},
                      "aliases": ["entity_id"]
                    },
                    "action": {"delete": "cascade", "update": "restrict"}
                  },
                  "toSelfAsParent": {
                    "own": {"aliases": ["parent_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "prxgt_dwnl_customer"},
                      "aliases": ["customer_ref"]
                    },
                    "action": {"delete": "cascade", "update": "restrict"}
                  },
                  "toMageCountryCode": {
                    "own": {"aliases": ["country_code"]},
                    "reference": {
                      "entity": {"completeAlias": "directory_country"},
                      "aliases": ["country_id"]
                    },
                    "action": {"delete": "restrict", "update": "restrict"}
                  }
                }
              },
              "Change": {
                "alias": "change",
                "comment": "Registry for changes in downline.",
                "attribute": {
                  "Id": {
                    "alias": "id",
                    "comment": "ID of the change.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true, "autoincrement": true}}
                  },
                  "DateChanged": {
                    "alias": "date_changed",
                    "comment": "Timestamp for the change.",
                    "nullable": false,
                    "type": {"datetime": {}}
                  },
                  "CustomerId": {
                    "alias": "customer_ref",
                    "comment": "Reference to the customer.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "ParentId": {
                    "alias": "parent_ref",
                    "comment": "Reference to the customer's parent.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  }
                },
                "index": {
                  "PK": {"type": "primary", "aliases": ["id"]}
                },
                "relation": {
                  "toDownlineCustomer": {
                    "own": {"aliases": ["customer_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "prxgt_dwnl_customer"},
                      "aliases": ["customer_ref"]
                    },
                    "action": {"delete": "restrict", "update": "restrict"}
                  },
                  "toDownlineCustomerAsParent": {
                    "own": {"aliases": ["parent_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "prxgt_dwnl_customer"},
                      "aliases": ["customer_ref"]
                    },
                    "action": {"delete": "restrict", "update": "restrict"}
                  }
                }
              },
              "Snapshot": {
                "alias": "snap",
                "comment": "Historical snapshots of the downline states.",
                "attribute": {
                  "Date": {
                    "alias": "date",
                    "comment": "Snapshot date ('YYYYMMDD').",
                    "nullable": false,
                    "type": {"text": {"length": 8}}
                  },
                  "CustomerId": {
                    "alias": "customer_ref",
                    "comment": "Reference to the customer.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "ParentId": {
                    "alias": "parent_ref",
                    "comment": "Reference to the customer's parent.",
                    "nullable": false,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "Depth": {
                    "alias": "depth",
                    "comment": "Depth of the node in the tree.",
                    "nullable": false,
                    "default": 0,
                    "type": {"integer": {"unsigned": true}}
                  },
                  "Path": {
                    "alias": "path",
                    "comment": "Path to the node - /1/2/3/.../",
                    "nullable": false,
                    "type": {"text": {"length": 255}}
                  }
                },
                "index": {
                  "PK": {"type": "primary", "aliases": ["date", "customer_ref"]}
                },
                "relation": {
                  "toDownlineCustomer": {
                    "own": {"aliases": ["customer_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "prxgt_dwnl_customer"},
                      "aliases": ["customer_ref"]
                    },
                    "action": {"delete": "restrict", "update": "restrict"}
                  },
                  "toDownlineCustomerAsParent": {
                    "own": {"aliases": ["parent_ref"]},
                    "reference": {
                      "entity": {"completeAlias": "prxgt_dwnl_customer"},
                      "aliases": ["customer_ref"]
                    },
                    "action": {"delete": "restrict", "update": "restrict"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}